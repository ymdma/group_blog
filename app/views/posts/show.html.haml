= render "posts/header"

.main_wrap

  .show_content
    .show_content_date
      %h4
        = @post.created_at.strftime("%Y/%m/%d %H:%M")
    .show_upper
      .show_content_title
        %h3
          = @post.title
      .show_content_name
        %h4
          = @post.user.name
    .show_content_text
      %p
        = @post.content
    - if @post.image.present?
      .show_content_image
        = link_to "",url:"#{@post.image.url}" do
          = image_tag @post.image.url
  .show_lower_btn
    = link_to "戻る", root_path, method: :get

= render "posts/footer"