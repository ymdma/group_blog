
.header_wrap.hide
  .header
    .header_title
      %h2 TITLE
    .header_groug_name
      -# "#{@group.group_name}"
    .header_nav
      %p
        [ ここにNAV ]
        - if user_signed_in?
          サインイン中
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'logout-btn'
        - else
          サインアウト中


-# フラッシュメッセージなど
- if flash[:post_alert]
  %span.alert
  = flash[:post_alert]

-# メインコンテンツ表示ゾーン
.main_wrap

  .form_signin_wrap
    .form_signin_tab signin
    .form_signin_one
      .form_signin_two.hidden
        %h2 Log in
        %p 登録しているユーザーでログイン
        .form_signup
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              .field-label
                = f.label :email
              .field-input
                = f.email_field :email, autofocus: true
              .field
                .field-label
                  = f.label :password
                  %i (英数字6文字以上)
                .field-input
                  = f.password_field :password, autocomplete: "off"
              .actions
                = f.submit "Log in", class: 'btn'
        -# = render "devise/shared/links"


  .form_signup_wrap
    .form_signup_tab signup
    .form_signup_one
      .form_signup_two.hidden
        %h2 Sign up
        .form_signup
          = form_for "",url: signup_users_path, method: :post do |f|
            .field
              = f.label :name
              %br/
              = f.text_field :name, autofocus: true, autocomplete: "name"
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .field
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "new-password"
            .field
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password"
            .actions
              = f.submit "Sign up"
          = render "devise/shared/links"


  -# 新規投稿フォーム
  .form_post_wrap
    .form_post_tab post
    .form_post_one
      .form_post_two.hidden
        .form_post
          = form_for @post, url: posts_post_posts_path, method: :post do |f|
            = f.text_field :title, class: 'form_post_title', placeholder: 'タイトル'
            = f.text_field :content, class: 'form_post_content', placeholder: '本文テキスト'
            .form_image
              = f.label :image, class: 'form_post_mask_image' do
                = fa_icon 'picture-o', class: 'icon'
                = f.file_field :image, class: 'hidden'
            .form_post_submit-btn
              = f.button '投稿する',type: "submit" , class: 'form_post_submit'


  .contents_wrap
    .contents_tab contents
    .contents_one
      .contents_two.hidden
        - @posts.each do |post|
          .content
            .content_title
              %h3
                -# タイトル:
                = post.title
            .content_name
              %h3
                -# ユーザ名:
                = post.user.name
            .content_text
              %p
                -# 本文:
                %br
                = post.content
              .clear
            .content_image
            -#   = image_tag post.image
